{
    "manifest_version" : 2,
    "name" : "youtube-note",
    "description" : "",
    "version" : "2.0",
    "browser_action" : {
        "default_title" : "youtube-note",
        "default_icon" : "icon.png",
        "default_popup": "popup.html"
    },
    "content_scripts" : [
        {
            "matches" : ["*://www.youtube.com/*"],
            "js" : [
                "scripts/vue@2.6.0.js",
                "scripts/vuex.min.js",
                "scripts/jquery.min.js",
                "scripts/markdown-it.min.js",
                "scripts/muse-ui.js",
                "content.js"
            ],
			"css" : ["content.css"],
			
			"all_frames": true
        }
    ],
    "background": {
        "scripts": ["background.js"]
	},
	"web_accessible_resources": [
		"accessible.js"
	],
    "permissions" : [
        "tabs",
        "<all_urls>",
        "activeTab",
        "storage"
    ]
}